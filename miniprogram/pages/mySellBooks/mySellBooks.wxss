.shadow {
  box-shadow: 0px 5px 10px 5px rgba(0, 0, 0, 0.05);
  background-color: #fafafa;
  /* 解决van-swipe-cell渲染层报错 */
  touch-action: pan-y;
}

.swiperCellButton {
  --button-default-height: 100%;
  width: auto;
}

.time {
  color: #8C8C8C;
  font-weight: 500;
  font-size: 15px;
  margin-top: 15px;
  margin-bottom: 10px;
  margin-left: 25px;
}

.bookName {
  word-wrap: break-word;
  font-weight: 700;
  line-height: 16px;
  line-height: var(--card-title-line-height, 16px);
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.bookIntroduction {
  color: #a1a1a1;
  font-size: xx-small;
  margin-top: 4px;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.btnSizeStyle{
  --button-small-min-width: 70px;
  --button-small-font-size: 10px;
  --button-small-height: 26px;
}