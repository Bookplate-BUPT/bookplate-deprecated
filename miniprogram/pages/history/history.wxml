<!--pages/history/history.wxml-->

<view wx:if="{{!userOpenid}}">
  <van-popup show="{{ showNoLoginPopup }}" bind:close="closeNoLoginPopup" round position="bottom" custom-style="height: 35%">
    <view style="justify-content: center; display: flex; margin: 12% 0 8% 0;">认证用户信息后方可正常使用</view>
    <van-button round type="primary" color="linear-gradient(to right, #b3cfb0, #659c64)" custom-style="justify-content: center; display: flex; width: 80%" bind:click="userLogin">
      点此认证用户信息
    </van-button>
  </van-popup>
</view>

<van-tabs color="#8AC286" sticky animated swipeable>
  <van-tab title="卖书">
    <view wx:for="{{ nowHistoryList }}" style="margin-top: 8px;" wx:key="_id">
      <MainBookCard right="{{ 60 }}" left="{{ 60 }}" price="{{item.bookDetail.price}}" image_list="{{item.bookDetail.image_list}}" origin-price="{{item.bookDetail.origin-price}}" _id="{{item.bookDetail._id}}" name="{{item.bookDetail.name}}" grade="{{item.bookDetail.grade}}" introduction="{{item.bookDetail.introduction}}">
        <van-button block color="#ff0000" custom-class="swiperCellButton" slot="left" bind:click="deleteHistory" data-id="{{item._id}}">删除</van-button>
        <van-button block color="#ff0000" custom-class="swiperCellButton" slot="right" bind:click="deleteHistory" data-id="{{item._id}}">删除</van-button>
      </MainBookCard>
    </view>
  </van-tab>

  <van-tab title="求书">
    <view style="display: flex; justify-content: center; margin-top: 200px;">暂未开发</view>
  </van-tab>

</van-tabs>

<van-divider contentPosition="center" dashed>没有更多啦</van-divider>