/* pages/message/message.wxss */
.container {
    padding: 20rpx;
  }
   
  .content {
    width: 100%;
    height: 360rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    border: 1px solid #ccc;
  }
   
  .footer {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    position: fixed;
    bottom: 0;
    box-sizing: border-box;
    background: #34bfa3;
  }
   
  .send-btn {
    width: 100% !important;
    color: #fff;
    font-size: 32rpx;
  }
   
  button {
    width: 100%;
    background: #34bfa3;
    border-radius: 0rpx;
  }
   
  button::after {
    border-radius: 0rpx !important;
  }