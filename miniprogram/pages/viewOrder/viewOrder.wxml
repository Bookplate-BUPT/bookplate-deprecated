          </van-card>
        </van-cell-group>
      </view>
    </view>
  </van-tab>

  <van-tab title="待收货">
    <view wx:if="{{ !rejectedTrade.length }}" style="margin-top: 180rpx;">
      <van-empty description="没有已拒绝的交易哦~"></van-empty>
