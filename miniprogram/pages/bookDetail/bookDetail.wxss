/* pages/bookDetail/bookDetail.wxss */
.shadow {
  box-shadow: 0px 5px 10px 5px rgba(0, 0, 0, 0.05);
  background-color: white;
  /* 解决van-swipe-cell渲染层报错 */
  touch-action: none;
}

.usernameCol {
  margin-top: 8px;
}

.tagCol {
  margin-top: 4px;
}

.price-show {
  background-attachment: scroll;
  height: 66px;
}

.price {
  font-size: 25px;
  color: red;
  font-weight: 600;
  margin-top: 7px;
  margin-left: 10px;
}

.original-price {
  color: #888;
  text-decoration: line-through;
  padding-left: 5px;
  font-size: 12px;
  line-height: 30px;
  font-weight: 300;
  margin-left: 5px;
}

.book-name {
  font-size: 17px;
  font-weight: 600;
  margin-top: -2px;
  margin-left: 12px;
  margin-bottom: 7px;
}