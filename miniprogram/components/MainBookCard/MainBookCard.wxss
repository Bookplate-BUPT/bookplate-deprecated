/* components/mainBook/mainBook.wxss */
@import '../../miniprogram_npm/@vant/weapp/common/index.wxss';

.shadow {
  box-shadow: 0px 5px 10px 5px rgba(0, 0, 0, 0.05);
  background-color: #fafafa;
  /* 解决van-swipe-cell渲染层报错 */
  touch-action: pan-y;
}

.styler {
  font-weight: bolder;
  font-size: 14px;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}