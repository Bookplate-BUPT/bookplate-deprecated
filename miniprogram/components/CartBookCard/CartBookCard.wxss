/* components/CartBookCard/CartBookCard.wxss */
.shadow {
  box-shadow: 0px 5px 10px 5px rgba(0, 0, 0, 0.05);
  background-color: #fafafa;
  /* 解决van-swipe-cell渲染层报错 */
  touch-action: none;
}

.goodsCardMargin {
  margin-top: 4px;
}

.thumbAlt {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #C8C8C8;
  border: 1px solid #E6E6E6;
}